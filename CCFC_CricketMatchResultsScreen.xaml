	x:Class="CCFC_Cricket.CCFC_CricketMatchResultsScreen"
	Title = "Match Result">
	<StackLayout Orientation = "Vertical" Padding = "10,10,10,10">
		<Label x:Name ="Title" Text = "C Team won by 20 runs"
			HorizontalOptions = "CenterAndExpand"
