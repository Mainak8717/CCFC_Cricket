<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CCFC_Cricket.CCFC_CricketCalendarScreen">

<ListView  x:Name="lstView" RowHeight="100" IsGroupingEnabled="true" SeparatorVisibility = "None" GroupDisplayBinding="{Binding LongName}" HasUnevenRows = "true">
			<ListView.GroupHeaderTemplate>
            	<DataTemplate>
              		<ViewCell Height="40">
                		<StackLayout BackgroundColor="Lime" Padding="10">
                  			<Label Text="{Binding LongName}" TextColor="Black" />
                		</StackLayout>
              		</ViewCell>
           	 	</DataTemplate>
         	</ListView.GroupHeaderTemplate>
			<ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                      	<StackLayout Orientation = "Vertical" HorizontalOptions = "StartAndExpand" Padding = "5,10,5,10" BackgroundColor = "Fuchsia">
							<Label Text = "{Binding teamName_One}" FontAttributes = "Bold" HorizontalTextAlignment = "Start"/>
							<Label Text = "{Binding gameTime}"  HorizontalTextAlignment = "Start"/>
							<Label Text = "{Binding gameVenue}" HorizontalTextAlignment = "Start"/>
							<StackLayout HeightRequest = "20" HorizontalOptions = "StartAndExpand"/>
					</StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView> 
	
</ContentPage>
