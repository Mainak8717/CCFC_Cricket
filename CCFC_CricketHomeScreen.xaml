<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="CCFC_Cricket.CCFC_CricketHomeScreen"
	Title = "Home">
	<StackLayout Orientation = "Vertical" HorizontalOptions = "CenterAndExpand">
		<Image Source = "ccfc.jpg" HorizontalOptions = "CenterAndExpand"/>
		<Label Text = "Cricket Season 2017-18" HorizontalOptions = "CenterAndExpand" HorizontalTextAlignment = "Center" />
		<ScrollView Orientation = "Vertical">
			<StackLayout Orientation = "Vertical" Padding = "10,10,10,10" Spacing = "20">
				<Image Source = "irfan.jpg" HorizontalOptions = "Center"/>
				<Label Text = "Captain – Mr. Irfan Ahmed" HorizontalOptions = "Center" HorizontalTextAlignment = "Center" />
			    <Image Source = "mainak.jpg" HorizontalOptions = "Center"/>
				<Label Text = "Joint Secy – Mr. Mainak Choudhury" HorizontalOptions = "Center" HorizontalTextAlignment = "Center" />
			    <Image Source = "Zaffy.jpg" HorizontalOptions = "Center"/>
				<Label Text = "Joint Secy – Mr. Zafar Aziz Khan" HorizontalOptions = "Center" HorizontalTextAlignment = "Center" />


			</StackLayout>
		</ScrollView>
	</StackLayout>
</ContentPage>
